{% extends 'base_back.html.twig' %}

{% block title %}Gestion Questions Quiz - Admin{% endblock %}

{% block body %}
<div class="page-header flex-between">
    <div>
        <h1 class="page-title">Gestion des Questions Quiz</h1>
        <p class="page-subtitle">Créer et gérer les questions pour les assessments mentaux</p>
    </div>
    <a href="{{ path('app_mental_admin_question_new') }}" class="btn btn-primary">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="12" y1="5" x2="12" y2="19"/>
            <line x1="5" y1="12" x2="19" y2="12"/>
        </svg>
        Nouvelle Question
    </a>
</div>

{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
            <polyline points="22 4 12 14.01 9 11.01"/>
        </svg>
        {{ message }}
    </div>
{% endfor %}

<div class="card">
    <div class="card-header">
        <div class="flex-between" style="margin-bottom: 20px;">
            <h4 class="card-title">Liste des Questions (<span id="questions-count">{{ questions|length }}</span>)</h4>
            <div class="filters-container" style="display: flex; gap: 15px; align-items: center;">
                <!-- Champ de recherche -->
                <div class="search-box" style="position: relative;">
                    <input type="text" 
                           id="search-input" 
                           placeholder="Rechercher une question..." 
                           style="padding: 8px 35px 8px 12px; border: 1px solid #ddd; border-radius: 6px; width: 250px; font-size: 14px;">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" 
                         style="position: absolute; right: 12px; top: 50%; transform: translateY(-50%);">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="m21 21-4.35-4.35"></path>
                    </svg>
                </div>
                
                <!-- Tri -->
                <select id="sort-select" style="padding: 8px 12px; border: 1px solid #ddd; border-radius: 6px; font-size: 14px;">
                    <option value="id-asc">ID croissant</option>
                    <option value="id-desc">ID décroissant</option>
                    <option value="points-asc">Points croissant</option>
                    <option value="points-desc">Points décroissant</option>
                    <option value="enonce-asc">Énoncé A-Z</option>
                    <option value="enonce-desc">Énoncé Z-A</option>
                </select>
                
                <!-- Bouton de réinitialisation -->
                <button id="reset-filters" class="btn btn-secondary" style="padding: 8px 12px; font-size: 14px;">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display: inline; margin-right: 5px;">
                        <polyline points="1 4 1 10 7 10"></polyline>
                        <path d="M3.51 15a9 9 0 1 0 2.13-9.36L1 10"></path>
                    </svg>
                    Réinitialiser
                </button>
            </div>
        </div>
        
        <!-- Indicateur de chargement -->
        <div id="loading-indicator" style="display: none; text-align: center; padding: 20px; color: #666;">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="animation: spin 1s linear infinite; display: inline-block; margin-right: 8px;">
                <path d="M21 12a9 9 0 11-6.219-8.56"></path>
            </svg>
            Chargement...
        </div>
    </div>
    
    <div id="questions-table-container">
        {% if questions|length > 0 %}
            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th style="width: 50px; cursor: pointer;" data-sort="id">
                                ID <span class="sort-indicator">⇅</span>
                            </th>
                            <th style="cursor: pointer;" data-sort="enonce">
                                Énoncé <span class="sort-indicator">⇅</span>
                            </th>
                            <th style="width: 200px;">Réponse Correcte</th>
                            <th style="width: 100px; cursor: pointer;" data-sort="points">
                                Points <span class="sort-indicator">⇅</span>
                            </th>
                            <th style="width: 150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="questions-tbody">
                        {% for question in questions %}
                            <tr>
                                <td><strong>#{{ question.id }}</strong></td>
                                <td>
                                    <div style="max-width: 400px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                        {{ question.enonce }}
                                    </div>
                                </td>
                                <td>
                                    <span class="badge badge-success">{{ question.reponseCorrecte }}</span>
                                </td>
                                <td><strong>{{ question.pointsValeur }}</strong></td>
                                <td>
                                    <div class="table-actions">
                                        <a href="{{ path('app_mental_admin_question_edit', {id: question.id}) }}" 
                                           class="icon-btn" 
                                           title="Modifier">
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                                            </svg>
                                        </a>
                                        <form action="{{ path('app_mental_admin_question_delete', {id: question.id}) }}" 
                                              method="post" 
                                              style="display: inline;" 
                                              class="delete-form">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ question.id) }}">
                                            <button type="submit" class="icon-btn danger" title="Supprimer">
                                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                    <polyline points="3 6 5 6 21 6"/>
                                                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                                                </svg>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="empty-state">
                <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="var(--gray-300)" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <line x1="12" y1="8" x2="12" y2="12"/>
                    <line x1="12" y1="16" x2="12.01" y2="16"/>
                </svg>
                <h4 class="empty-state-title">Aucune question trouvée</h4>
                <p class="text-gray">Essayez de modifier vos critères de recherche.</p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
<style>
@keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}

.sort-indicator {
    font-size: 12px;
    color: #999;
    margin-left: 5px;
}

th[data-sort]:hover {
    background-color: #f8f9fa;
}

th[data-sort] {
    user-select: none;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('search-input');
    const sortSelect = document.getElementById('sort-select');
    const resetButton = document.getElementById('reset-filters');
    const loadingIndicator = document.getElementById('loading-indicator');
    const tableContainer = document.getElementById('questions-table-container');
    const questionsCount = document.getElementById('questions-count');
    
    let currentSearch = '';
    let currentSort = 'id-desc';
    let searchTimeout;
    
    // Fonction pour charger les questions via AJAX
    function loadQuestions() {
        clearTimeout(searchTimeout);
        
        searchTimeout = setTimeout(() => {
            loadingIndicator.style.display = 'block';
            tableContainer.style.display = 'none';
            
            const params = new URLSearchParams({
                'search': currentSearch,
                'sort': currentSort
            });
            
            fetch(`{{ path('app_mental_admin_questions_ajax') }}?${params.toString()}`, {
                method: 'GET',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    updateTable(data.html);
                    questionsCount.textContent = data.count;
                } else {
                    console.error('Erreur:', data.error);
                }
            })
            .catch(error => {
                console.error('Erreur AJAX:', error);
            })
            .finally(() => {
                loadingIndicator.style.display = 'none';
                tableContainer.style.display = 'block';
            });
        }, 300); // Délai de 300ms pour éviter trop de requêtes
    }
    
    // Fonction pour mettre à jour le tableau
    function updateTable(html) {
        tableContainer.innerHTML = html;
        
        // Réattacher les événements de suppression
        attachDeleteEvents();
    }
    
    // Fonction pour attacher les événements de suppression
    function attachDeleteEvents() {
        const deleteForms = document.querySelectorAll('.delete-form');
        deleteForms.forEach(function(form) {
            form.addEventListener('submit', function(e) {
                if (!confirm('Êtes-vous sûr de vouloir supprimer cette question ?')) {
                    e.preventDefault();
                }
            });
        });
    }
    
    // Événements
    searchInput.addEventListener('input', function() {
        currentSearch = this.value;
        loadQuestions();
    });
    
    sortSelect.addEventListener('change', function() {
        currentSort = this.value;
        loadQuestions();
    });
    
    resetButton.addEventListener('click', function() {
        searchInput.value = '';
        sortSelect.value = 'id-desc';
        currentSearch = '';
        currentSort = 'id-desc';
        loadQuestions();
    });
    
    // Tri en cliquant sur les en-têtes de colonnes
    document.querySelectorAll('th[data-sort]').forEach(th => {
        th.addEventListener('click', function() {
            const sortField = this.dataset.sort;
            const currentOrder = currentSort.startsWith(sortField) ? 
                (currentSort.endsWith('-asc') ? '-desc' : '-asc') : '-asc';
            
            currentSort = sortField + currentOrder;
            sortSelect.value = currentSort;
            loadQuestions();
        });
    });
    
    // Initialisation
    attachDeleteEvents();
});
</script>
{% endblock %}
