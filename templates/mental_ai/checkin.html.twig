{% block javascripts %}
<script>
let selectedMood = null;

// S√©lection d'humeur
document.querySelectorAll('.mood-option').forEach(option => {
    option.addEventListener('click', function() {
        document.querySelectorAll('.mood-option').forEach(opt => opt.classList.remove('selected'));
        this.classList.add('selected');
        selectedMood = this.dataset.mood;
    });
});

// Slider d'√©nergie
document.getElementById('energy-level').addEventListener('input', function() {
    document.getElementById('energy-value').textContent = this.value;
});

// Soumission du check-in
function submitCheckin() {
    if (!selectedMood) {
        showNotification('Veuillez s√©lectionner votre humeur', 'error');
        return;
    }

    const details = document.getElementById('checkin-details').value;
    const energyLevel = document.getElementById('energy-level').value;
    
    const checkinText = `Humeur: ${selectedMood}, √ânergie: ${energyLevel}/10${details ? ', D√©tails: ' + details : ''}`;

    // Envoyer au coach IA pour obtenir un conseil
    fetch('/mental-ai/coach-advice', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
        },
        body: 'checkin_text=' + encodeURIComponent(checkinText)
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Afficher le conseil
            showAdviceModal(checkinText, data.advice);
        } else {
            showNotification('Check-in enregistr√©, mais le coach est indisponible', 'warning');
        }
    })
    .catch(error => {
        showNotification('Erreur lors de l\'enregistrement', 'error');
    });
}

function showAdviceModal(checkinText, advice) {
    const modal = document.createElement('div');
    modal.className = 'advice-modal';
    modal.innerHTML = `
        <div class="modal-content">
            <div class="modal-header">
                <h3>ü§ñ Conseil du Coach BioSync</h3>
                <button class="close-btn" onclick="closeModal()">&times;</button>
            </div>
            <div class="modal-body">
                <div class="checkin-summary">
                    <strong>Votre check-in:</strong>
                    <p>${checkinText}</p>
                </div>
                <div class="coach-advice">
                    <strong>Conseil personnalis√©:</strong>
                    <p>${advice}</p>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="closeModal()">Compris !</button>
            </div>
        </div>
    `;
    
    document.body.appendChild(modal);
}

function closeModal() {
    const modal = document.querySelector('.advice-modal');
    if (modal) {
        document.body.removeChild(modal);
    }
    // Rediriger vers le dashboard
    window.location.href = '{{ path('app_mental_ai_dashboard') }}';
}

function showNotification(message, type) {
    const notification = document.createElement('div');
    notification.className = `alert alert-${type}`;
    notification.textContent = message;
    notification.style.cssText = 'position: fixed; top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
    document.body.appendChild(notification);
    
    setTimeout(() => {
        if (document.body.contains(notification)) {
            document.body.removeChild(notification);
        }
    }, 3000);
}
</script>

