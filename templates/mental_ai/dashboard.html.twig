{% extends 'base.html.twig' %}

{% block title %}IA Mentale - BioSync{% endblock %}

{% block body %}
<div class="mental-ai-dashboard">
    <div class="page-header">
        <div>
            <h1 class="page-title">üß† IA Mentale BioSync</h1>
            <p class="page-subtitle">Analyse cognitive et coaching personnalis√©</p>
        </div>
        <div class="ai-status">
            {% if apiAvailable %}
                <span class="status-badge status-online">
                    <svg width="12" height="12" viewBox="0 0 24 24" fill="currentColor">
                        <circle cx="12" cy="12" r="10"/>
                    </svg>
                    IA Connect√©e
                </span>
            {% else %}
                <span class="status-badge status-offline">
                    <svg width="12" height="12" viewBox="0 0 24 24" fill="currentColor">
                        <circle cx="12" cy="12" r="10"/>
                    </svg>
                    IA Hors ligne
                </span>
            {% endif %}
        </div>
    </div>

    <div class="ai-grid">
        <!-- Carte Fatigue Cognitive -->
        <div class="ai-card">
            <div class="card-header">
                <h3>üîç Analyse Fatigue Cognitive</h3>
                <div class="card-icon">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"/>
                    </svg>
                </div>
            </div>
            <div class="card-body">
                {% if fatigueAnalysis.level is defined %}
                    <div class="fatigue-level fatigue-{{ fatigueAnalysis.level }}">
                        <span class="level-label">{{ fatigueAnalysis.level|upper }}</span>
                        {% if fatigueAnalysis.cv_score is defined %}
                            <span class="cv-score">CV: {{ fatigueAnalysis.cv_score }}</span>
                        {% endif %}
                    </div>
                    {% if fatigueAnalysis.message is defined %}
                        <p class="fatigue-message">{{ fatigueAnalysis.message }}</p>
                    {% endif %}
                {% else %}
                    <p class="no-data">Pas assez de donn√©es pour l'analyse</p>
                {% endif %}
                
                <button class="btn btn-secondary btn-sm" onclick="startFatigueTest()">
                    Lancer test de fatigue
                </button>
            </div>
        </div>

        <!-- Carte Pr√©diction Performance -->
        <div class="ai-card">
            <div class="card-header">
                <h3>üìà Pr√©diction Performance</h3>
                <div class="card-icon">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="20" x2="18" y2="10"/>
                        <line x1="12" y1="20" x2="12" y2="4"/>
                        <line x1="6" y1="20" x2="6" y2="14"/>
                    </svg>
                </div>
            </div>
            <div class="card-body">
                {% if performancePrediction.trend is defined %}
                    <div class="trend-indicator trend-{{ performancePrediction.trend }}">
                        <span class="trend-arrow">
                            {% if performancePrediction.trend == 'upward' %}‚Üë{% endif %}
                            {% if performancePrediction.trend == 'downward' %}‚Üì{% endif %}
                            {% if performancePrediction.trend == 'stable' %}‚Üí{% endif %}
                        </span>
                        <span class="trend-text">{{ performancePrediction.trend|upper }}</span>
                    </div>
                    {% if performancePrediction.next_predicted_score is defined %}
                        <div class="predicted-score">
                            Score pr√©dit: <strong>{{ performancePrediction.next_predicted_score }}/100</strong>
                        </div>
                    {% endif %}
                {% else %}
                    <p class="no-data">Pas d'historique suffisant</p>
                {% endif %}
                
                <button class="btn btn-secondary btn-sm" onclick="refreshPrediction()">
                    Actualiser pr√©diction
                </button>
            </div>
        </div>

        <!-- Carte Coach IA -->
        <div class="ai-card coach-card">
            <div class="card-header">
                <h3>ü§ñ Coach IA Personnel</h3>
                <div class="card-icon">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M9 11H3v2h6v-2zm0-4H3v2h6V7zm0 8H3v2h6v-2zm12-8h-6v2h6V7zm0 4h-6v2h6v-2zm0 4h-6v2h6v-2z"/>
                    </svg>
                </div>
            </div>
            <div class="card-body">
                <div class="coach-form">
                    <textarea 
                        id="checkin-text" 
                        class="coach-input" 
                        placeholder="Comment te sens-tu aujourd'hui ? D√©cris ton √©tat mental, ta fatigue, tes motivations..."
                        rows="3"
                    ></textarea>
                    <button class="btn btn-primary" onclick="getCoachAdvice()">
                        Obtenir un conseil
                    </button>
                </div>
                <div id="coach-response" class="coach-response hidden">
                    <div class="response-header">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                        </svg>
                        Conseil du Coach
                    </div>
                    <div id="coach-advice-text" class="advice-text"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Test de fatigue cach√© -->
    <div id="fatigue-test" class="fatigue-test hidden">
        <div class="test-overlay">
            <div class="test-container">
                <h3>Test de Fatigue Cognitive</h3>
                <p>Cliquez sur les cercles le plus vite possible</p>
                <div id="test-area" class="test-area"></div>
                <button class="btn btn-secondary" onclick="stopFatigueTest()">Terminer</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
let fatigueTimings = [];
let fatigueTestActive = false;
let fatigueStartTime = null;

// Test de fatigue cognitive
function startFatigueTest() {
    fatigueTimings = [];
    fatigueTestActive = true;
    document.getElementById('fatigue-test').classList.remove('hidden');
    document.getElementById('test-area').innerHTML = '';
    
    // Cr√©er 5 cibles
    for (let i = 0; i < 5; i++) {
        setTimeout(() => createTarget(), i * 1000);
    }
}

function createTarget() {
    if (!fatigueTestActive) return;
    
    const testArea = document.getElementById('test-area');
    const target = document.createElement('div');
    target.className = 'fatigue-target';
    target.style.left = Math.random() * 300 + 'px';
    target.style.top = Math.random() * 200 + 'px';
    
    fatigueStartTime = Date.now();
    target.onclick = function() {
        const timing = Date.now() - fatigueStartTime;
        fatigueTimings.push(timing);
        testArea.removeChild(target);
        
        if (fatigueTimings.length < 5) {
            setTimeout(() => createTarget(), 500);
        } else {
            analyzeFatigue();
        }
    };
    
    testArea.appendChild(target);
}

function stopFatigueTest() {
    fatigueTestActive = false;
    document.getElementById('fatigue-test').classList.add('hidden');
}

function analyzeFatigue() {
    stopFatigueTest();
    
    fetch('/mental-ai/analyze-fatigue', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
        },
        body: 'timings=' + JSON.stringify(fatigueTimings)
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        }
    });
}

// Coach IA
function getCoachAdvice() {
    const checkinText = document.getElementById('checkin-text').value.trim();
    if (!checkinText) {
        showNotification('Veuillez d√©crire comment vous vous sentez', 'error');
        return;
    }
    
    const responseDiv = document.getElementById('coach-response');
    const adviceText = document.getElementById('coach-advice-text');
    
    responseDiv.classList.remove('hidden');
    adviceText.innerHTML = '<div class="loading">Le coach r√©fl√©chit...</div>';
    
    fetch('/mental-ai/coach-advice', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
        },
        body: 'checkin_text=' + encodeURIComponent(checkinText)
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            adviceText.textContent = data.advice;
        } else {
            adviceText.textContent = 'D√©sol√©, le coach est indisponible pour le moment.';
        }
    })
    .catch(error => {
        adviceText.textContent = 'Erreur de connexion au coach.';
    });
}

// Actualiser pr√©diction
function refreshPrediction() {
    fetch('/mental-ai/predict-performance', {
        method: 'POST'
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        }
    });
}

function showNotification(message, type) {
    // Impl√©mentation simple de notification
    const notification = document.createElement('div');
    notification.className = `alert alert-${type}`;
    notification.textContent = message;
    notification.style.cssText = 'position: fixed; top: 20px; right: 20px; z-index: 9999;';
    document.body.appendChild(notification);
    
    setTimeout(() => {
        document.body.removeChild(notification);
    }, 3000);
}
</script>

