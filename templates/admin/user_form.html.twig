{% extends 'base_back.html.twig' %}

{% block title %}{{ title }} - BioSync{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .form-container {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        padding: 30px;
        max-width: 700px;
        margin: 0 auto;
    }
    
    .form-header {
        text-align: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 2px solid #F1F5F9;
    }
    
    .user-avatar-large {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, #6C5CE7, #A29BFE);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
        font-size: 24px;
        margin: 0 auto 15px;
    }
    
    .form-section {
        margin-bottom: 25px;
    }
    
    .form-section-title {
        font-size: 14px;
        font-weight: 700;
        color: #4A5568;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    
    .form-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;
    }
    
    .form-group {
        display: flex;
        flex-direction: column;
    }
    
    .form-group.full-width {
        grid-column: span 1;
    }
    
    .form-group label {
        font-size: 13px;
        font-weight: 600;
        color: #4A5568;
        margin-bottom: 6px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .form-group input,
    .form-group select {
        padding: 12px 16px;
        border: 2px solid #E2E8F0;
        border-radius: 10px;
        font-size: 15px;
        background: white;
        transition: all 0.2s;
    }
    
    .form-group input:focus,
    .form-group select:focus {
        outline: none;
        border-color: #6C5CE7;
        box-shadow: 0 0 0 3px rgba(108, 92, 231, 0.1);
    }
    
    .form-hint {
        font-size: 12px;
        color: #718096;
        margin-top: 4px;
    }
    
    /* Role checkboxes */
    .role-options {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 12px;
    }
    
    .role-option {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 16px;
        border: 2px solid #E2E8F0;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.2s;
    }
    
    .role-option:hover {
        border-color: #CBD5E0;
        background: #F7FAFC;
    }
    
    .role-option input[type="checkbox"] {
        width: 20px;
        height: 20px;
        accent-color: #6C5CE7;
        cursor: pointer;
    }
    
    .role-info {
        display: flex;
        flex-direction: column;
    }
    
    .role-name {
        font-size: 14px;
        font-weight: 600;
        color: #2D3748;
    }
    
    .role-desc {
        font-size: 12px;
        color: #718096;
    }
    
    .role-badge {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 20px;
        font-size: 11px;
        font-weight: 600;
        text-transform: uppercase;
    }
    .role-badge.admin {
        background: #FED7D7;
        color: #9B2C2C;
    }
    .role-badge.coach {
        background: #C6F6D5;
        color: #22543D;
    }
    .role-badge.specialist {
        background: #FEEBC8;
        color: #744210;
    }
    .role-badge.user {
        background: #E2E8F0;
        color: #4A5568;
    }
    
    .form-actions {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
        margin-top: 30px;
        padding-top: 25px;
        border-top: 2px solid #F1F5F9;
        justify-content: flex-end;
    }
    
    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        padding: 12px 24px;
        border-radius: 10px;
        font-size: 14px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s;
        border: none;
        cursor: pointer;
        flex: 0 0 auto;
    }
    
    .btn-primary {
        background: #6C5CE7;
        color: white;
    }
    
    .btn-primary:hover {
        background: #5A4FCF;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(108, 92, 231, 0.3);
    }
    
    .btn-secondary {
        background: #EDF2F7;
        color: #4A5568;
    }
    
    .btn-secondary:hover {
        background: #E2E8F0;
    }
    
    .invalid-feedback {
        color: #E53E3E;
        font-size: 13px;
        margin-top: 6px;
    }
    
    @media (max-width: 640px) {
        .role-options {
            grid-template-columns: 1fr;
        }
        .form-actions {
            justify-content: center;
        }
        .btn {
            width: 100%;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="bo-mental-dashboard">
    <div class="page-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 25px;">
        <div>
            <h1 class="page-title">{{ title }}</h1>
            <p class="page-subtitle">
                {% if user.id %}Modifier les informations de {{ user.nomComplet }}{% else %}Créer un nouvel utilisateur pour la plateforme{% endif %}
            </p>
        </div>
        <a href="{{ path('app_admin_users') }}" class="btn btn-secondary" style="background-color: #EDF2F7; border-color: #EDF2F7; color: #4A5568; display: flex; align-items: center; gap: 8px; flex: none;">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
            Retour
        </a>
    </div>

    <div class="form-container">
        <div class="form-header">
            <div class="user-avatar-large">{{ user.nomComplet|default('NU')|slice(0, 2)|upper }}</div>
            <h2 style="font-size: 20px; font-weight: 600; color: #2D3748; margin-bottom: 4px;">
                {% if user.id %}{{ user.nomComplet }}{% else %}Nouvel Utilisateur{% endif %}
            </h2>
            <p style="font-size: 14px; color: #718096;">
                {% if user.id %}ID: #{{ user.id }}{% else %}Remplissez les informations ci-dessous{% endif %}
            </p>
        </div>

        {{ form_start(form, {'attr': {'class': 'form-grid'}}) }}
            
            <div class="form-section">
                <div class="form-section-title">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#6C5CE7" stroke-width="2"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                    Informations personnelles
                </div>
                
                <div class="form-group">
                    {{ form_label(form.nomComplet, 'Nom complet') }}
                    {{ form_widget(form.nomComplet, {'attr': {'placeholder': 'Ex: Jean Dupont'}}) }}
                    {{ form_errors(form.nomComplet) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.email, 'Adresse email') }}
                    {{ form_widget(form.email, {'attr': {'placeholder': 'Ex: jean.dupont@email.com'}}) }}
                    {{ form_errors(form.email) }}
                </div>
            </div>

            {% if form.plainPassword is defined %}
            <div class="form-section">
                <div class="form-section-title">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#6C5CE7" stroke-width="2"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
                    Mot de passe
                </div>
                <div class="form-group full-width">
                    {{ form_label(form.plainPassword, 'Mot de passe') }}
                    {% if user.id %}
                        <p class="form-hint">Laissez vide pour conserver le mot de passe actuel</p>
                    {% endif %}
                    {{ form_widget(form.plainPassword, {'attr': {'placeholder': user.id ? '•••••••• (inchangé)' : 'Minimum 8 caractères'}}) }}
                    {{ form_errors(form.plainPassword) }}
                </div>
            </div>
            {% endif %}

            <div class="form-section">
                <div class="form-section-title">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#6C5CE7" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path></svg>
                    Rôles et permissions
                </div>
                <div class="form-group full-width">
                    <div class="role-options">
                        {% for choice in form.roles %}
                            <label class="role-option">
                                {{ form_widget(choice) }}
                                <div class="role-info">
                                    <span class="role-name">
                                        {% if choice.vars.value == 'ROLE_ADMIN' %}
                                            <span class="role-badge admin">Admin</span> Administrateur
                                        {% elseif choice.vars.value == 'ROLE_COACH' %}
                                            <span class="role-badge coach">Coach</span> Coach
                                        {% elseif choice.vars.value == 'ROLE_SPECIALISTE' %}
                                            <span class="role-badge specialist">Spécialiste</span> Spécialiste
                                        {% else %}
                                            <span class="role-badge user">Utilisateur</span> Utilisateur
                                        {% endif %}
                                    </span>
                                    <span class="role-desc">
                                        {% if choice.vars.value == 'ROLE_ADMIN' %}
                                            Accès complet à l'administration
                                        {% elseif choice.vars.value == 'ROLE_COACH' %}
                                            Peut guider les utilisateurs
                                        {% elseif choice.vars.value == 'ROLE_SPECIALISTE' %}
                                            Accès aux consultations médicales
                                        {% else %}
                                            Utilisateur standard de la plateforme
                                        {% endif %}
                                    </span>
                                </div>
                            </label>
                        {% endfor %}
                    </div>
                    {{ form_errors(form.roles) }}
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"></polyline></svg>
                    {% if user.id %}Enregistrer les modifications{% else %}Créer l'utilisateur{% endif %}
                </button>
                <a href="{{ path('app_admin_users') }}" class="btn btn-secondary">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                    Annuler
                </a>
            </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
