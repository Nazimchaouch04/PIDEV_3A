                        console.warn('Type audio non support√©, utilisation du type par d√©faut');
                        delete options.mimeType;
                    }
                    
                    this.mediaRecorder = new MediaRecorder(stream, options);
                    this.audioChunks = [];
                    
                    this.mediaRecorder.ondataavailable = event => {
