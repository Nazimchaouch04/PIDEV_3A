        // R√©cup√©rer les champs du formulaire avec plusieurs s√©lecteurs possibles
        const nomAlimentField = document.querySelector('[name="aliment[nomAliment]"]') || 
                               document.querySelector('[id*="nomAliment"]') || 
                               document.querySelector('[id*="nom_aliment"]') || 
                               document.querySelector('input[name*="nom"]') ||
                               document.querySelector('input[name*="aliment"]');
        const caloriesField = document.querySelector('[name="aliment[calories]"]') || 
                             document.querySelector('[id*="calories"]') || 
                             document.querySelector('input[name*="calories"]');
        const proteinesField = document.querySelector('[name="aliment[proteines]"]') || 
                              document.querySelector('[id*="proteines"]') || 
                              document.querySelector('input[name*="proteines"]');
        
        // S√©lecteur universel pour le champ glucides
        const findAllInputs = () => document.querySelectorAll('input[type="number"], input[type="text"]');
        const findFieldByLabel = (labelText) => {
            const labels = document.querySelectorAll('label');
            for (let label of labels) {
                if (label.textContent.toLowerCase().includes(labelText.toLowerCase())) {
                    const input = label.querySelector('input') || document.getElementById(label.getAttribute('for'));
                    if (input) return input;
                }
            }
            return null;
        };
        
        const glucidesField = document.querySelector('[name="aliment[glucides]"]') || 
                             document.querySelector('[name="aliment[glucides]"]') || // avec accent
                             document.querySelector('[id*="glucides"]') || 
                             document.querySelector('[id*="glucides"]') || // avec accent
                             document.querySelector('input[name*="glucides"]') ||
                             document.querySelector('input[name*="glucides"]') || // avec accent
                             document.querySelector('input[placeholder*="Glucides"]') ||
                             document.querySelector('input[placeholder*="glucides"]') ||
                             document.querySelector('input[id*="glucide"]') ||
                             findFieldByLabel('glucides') ||
                             findFieldByLabel('glucides') ||
                             Array.from(findAllInputs()).find(input => 
                                 input.id && input.id.toLowerCase().includes('glucide') ||
                                 input.name && input.name.toLowerCase().includes('glucide')
                             );
        const lipidesField = document.querySelector('[name="aliment[lipides]"]') || 
                            document.querySelector('[id*="lipides"]') || 
                            document.querySelector('input[name*="lipides"]');
        
        // Debug: v√©rifier si les champs sont trouv√©s
        console.log('Champs trouv√©s:', {
            nomAliment: nomAlimentField,
            calories: caloriesField,
            proteines: proteinesField,
            glucides: glucidesField,
            lipides: lipidesField
        });
        
        // ============================================
        // RECONNAISSANCE VOCALE
        // ============================================
        class VoiceRecognition {
            constructor() {
                this.mediaRecorder = null;
                this.audioChunks = [];
                this.isRecording = false;
                
                this.voiceButton = voiceButton;
                this.recordingStatus = recordingStatus;
                this.chatbotInput = chatbotInput;
                
                if (this.voiceButton) {
                    this.voiceButton.addEventListener('click', () => this.toggleRecording());
                }
            }
            
            async toggleRecording() {
                if (!this.isRecording) {
                    await this.startRecording();
                } else {
                    this.stopRecording();
                }
            }
            
            async startRecording() {
                try {
                    const stream = await navigator.mediaDevices.getUserMedia({ audio: true });
                    this.mediaRecorder = new MediaRecorder(stream);
                    this.audioChunks = [];
                    
                    this.mediaRecorder.ondataavailable = event => {
                        this.audioChunks.push(event.data);
                    };
                    
                    this.mediaRecorder.onstop = async () => {
                        const audioBlob = new Blob(this.audioChunks, { type: 'audio/webm' });
                        await this.sendAudioToAPI(audioBlob);
                        
                        // Arr√™ter toutes les pistes audio
                        this.mediaRecorder.stream.getTracks().forEach(track => track.stop());
                    };
                    
                    this.mediaRecorder.start();
                    this.isRecording = true;
                    this.voiceButton.classList.add('recording');
                    this.recordingStatus.style.display = 'block';
                    
                    // Auto-stop apr√®s 7 secondes maximum
                    setTimeout(() => {
                        if (this.isRecording) {
                            this.stopRecording();
                        }
                    }, 7000);
                    
                } catch (err) {
                    alert('Erreur microphone: ' + err.message);
                    this.voiceButton.classList.remove('recording');
                    this.recordingStatus.style.display = 'none';
                }
            }
            
            stopRecording() {
                if (this.mediaRecorder && this.mediaRecorder.state !== 'inactive') {
                    this.mediaRecorder.stop();
                    this.isRecording = false;
                    this.voiceButton.classList.remove('recording');
                    this.recordingStatus.style.display = 'none';
                }
            }
            
            async sendAudioToAPI(audioBlob) {
                // Ajouter un message utilisateur
                this.addMessage('üé§ [Message vocal...]', true);
                
                // Cr√©er un FormData et ajouter le fichier audio
                const formData = new FormData();
                formData.append('audio', audioBlob, 'recording.webm');
                
                // Afficher l'indicateur de frappe
                const typingIndicator = this.showTypingIndicator();
                
                try {
                    const response = await fetch('/api/speech/transcribe', {
                        method: 'POST',
                        body: formData
                    });
                    
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        // Afficher la transcription
                        this.addMessage(`üó£Ô∏è "${result.transcription}"`, true);
                        
                        if (result.nutrition && result.nutrition.success) {
                            // Afficher les infos nutritionnelles
                            this.addMessage(`‚úÖ **Informations nutritionnelles trouv√©es :**<br>
                                üçΩ **Aliment:** ${result.nutrition.food}<br>
                                ‚öñÔ∏è **Quantit√©:** ${result.nutrition.quantity}g<br>
                                üî• **Calories:** ${result.nutrition.calories} kcal<br>
                                ü•© **Prot√©ines:** ${result.nutrition.proteines}g<br>
                                üçû **Glucides:** ${result.nutrition.glucides}g<br>
                                ü•ë **Lipides:** ${result.nutrition.lipides}g<br><br>
                                ‚ú® **Les champs du formulaire ont √©t√© automatiquement remplis !**`, false);
                            
                            // Remplir le formulaire
                            if (nomAlimentField) {
                                nomAlimentField.value = result.nutrition.food;
                                nomAlimentField.dispatchEvent(new Event('input', { bubbles: true }));
                            }
                            if (caloriesField && result.nutrition.calories) {
                                caloriesField.value = result.nutrition.calories;
                                caloriesField.dispatchEvent(new Event('input', { bubbles: true }));
                            }
                            if (proteinesField && result.nutrition.proteines) {
                                proteinesField.value = result.nutrition.proteines;
                                proteinesField.dispatchEvent(new Event('input', { bubbles: true }));
                            }
                            if (glucidesField && result.nutrition.glucides) {
                                glucidesField.value = result.nutrition.glucides;
                                glucidesField.dispatchEvent(new Event('input', { bubbles: true }));
                            }
                            if (lipidesField && result.nutrition.lipides) {
                                lipidesField.value = result.nutrition.lipides;
                                lipidesField.dispatchEvent(new Event('input', { bubbles: true }));
                            }
                            
                            // Mettre en surbrillance les champs remplis
                            [nomAlimentField, caloriesField, proteinesField, glucidesField, lipidesField].forEach(field => {
                                if (field && field.value) {
                                    field.style.backgroundColor = '#e8f5e8';
                                    field.style.border = '2px solid #4caf50';
                                    setTimeout(() => {
                                        field.style.backgroundColor = '';
                                        field.style.border = '';
                                    }, 2000);
                                }
                            });
                            
                        } else {
                            // Message d'erreur
                            this.addMessage(`‚ùå ${result.nutrition?.message || 'Aliment non reconnu'}`, false);
                        }
                    } else {
                        this.addMessage('‚ùå Erreur de transcription. Veuillez r√©essayer.', false);
                    }
                    
                } catch (error) {
                    console.error('Error:', error);
                    this.addMessage('‚ùå Erreur de connexion avec le serveur vocal.', false);
                } finally {
                    if (typingIndicator && typingIndicator.parentNode) {
                        typingIndicator.remove();
                    }
                }
            }
            
            addMessage(text, isUser = false) {
                const messageDiv = document.createElement('div');
                messageDiv.className = `message ${isUser ? 'user-message' : 'bot-message'}`;
                messageDiv.style.cssText = `
                    display: flex;
                    gap: 8px;
                    align-items: flex-start;
                    ${isUser ? 'align-self: flex-end;' : ''}
                `;
                
                const avatarDiv = document.createElement('div');
                avatarDiv.style.cssText = `
                    width: 24px;
                    height: 24px;
                    background: ${isUser ? 'rgba(255,255,255,0.3)' : 'rgba(255,255,255,0.2)'};
                    border-radius: 50%;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    flex-shrink: 0;
