                caloriesField.dispatchEvent(new Event('change', { bubbles: true }));
            }
            if (proteinesField && data.proteines) {
                proteinesField.value = data.proteines;
                proteinesField.dispatchEvent(new Event('input', { bubbles: true }));
                proteinesField.dispatchEvent(new Event('change', { bubbles: true }));
            }
            if (glucidesField && data.glucides) {
                glucidesField.value = data.glucides;
                glucidesField.dispatchEvent(new Event('input', { bubbles: true }));
                glucidesField.dispatchEvent(new Event('change', { bubbles: true }));
