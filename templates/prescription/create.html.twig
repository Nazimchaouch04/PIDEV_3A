{% extends 'base_back.html.twig' %}

{% block title %}Créer prescription{% endblock %}

{% block body %}

<div class="page-header">
    <h1 class="page-title">Créer prescription</h1>
    <p class="page-subtitle">Générez une prescription avec l'aide de l'IA</p>
</div>

<div class="form-container">
    {{ form_start(form) }}

    <div class="form-group">
        {{ form_label(form.nomMedicament) }}
        {{ form_widget(form.nomMedicament) }}
        {{ form_errors(form.nomMedicament) }}
    </div>

    <div class="form-group">
        {{ form_label(form.dose) }}
        {{ form_widget(form.dose) }}
        {{ form_errors(form.dose) }}
    </div>

    <div class="form-group">
        {{ form_label(form.frequence) }}
        {{ form_widget(form.frequence) }}
        {{ form_errors(form.frequence) }}
    </div>

    <div class="form-group">
        {{ form_label(form.duree) }}
        {{ form_widget(form.duree) }}
        {{ form_errors(form.duree) }}
    </div>

    <div class="form-group">
        {{ form_label(form.instructions) }}
        {{ form_widget(form.instructions) }}
        {{ form_errors(form.instructions) }}
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">
            Enregistrer la prescription
        </button>

        <a href="{{ path('app_prescription_index') }}" class="btn btn-secondary">
            Annuler
        </a>
    </div>

    {{ form_end(form) }}
</div>

{% endblock %}
