{% extends 'base_back.html.twig' %}

{% block title %}Liste des prescriptions{% endblock %}

{% block body %}

<div class="container mt-4">

    <h2 class="mb-4">Liste des prescriptions</h2>

    <table class="prescription-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Médicament</th>
                <th>Dose</th>
                <th>Fréquence</th>
                <th>Durée</th>
                <th>Instructions</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
        {% for prescription in prescriptions %}
            <tr>
                <td>{{ prescription.id }}</td>
                <td>{{ prescription.nomMedicament }}</td>
                <td>{{ prescription.dose }}</td>
                <td>{{ prescription.frequence }}</td>
                <td>{{ prescription.duree }} jours</td>
                <td>{{ prescription.instructions }}</td>
                <td>
                    <a class="btn btn-sm btn-primary"
                       href="{{ path('app_prescription_show', {'id': prescription.id}) }}">
                       Voir
                    </a>

                    <a class="btn btn-sm btn-warning"
                       href="{{ path('app_prescription_edit', {'id': prescription.id}) }}">
                       Modifier
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" style="text-align:center">Aucune prescription</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <br>

    <a class="btn btn-success"
       href="{{ path('app_specialiste') }}">
       Retour dashboard médecin
    </a>

</div>

{% endblock %}  