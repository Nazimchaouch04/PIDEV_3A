{% extends 'base_back.html.twig' %}

{% block title %}Administration - BioSync{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .admin-dashboard {
        padding: 20px;
        max-width: 1400px;
        margin: 0 auto;
    }
    .admin-header {
        margin-bottom: 30px;
    }
    .admin-header h1 {
        font-size: 28px;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 5px;
    }
    .admin-header p {
        color: #718096;
        font-size: 15px;
    }
    
    /* Stats Cards */
    .stats-row {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin-bottom: 25px;
    }
    .stat-box {
        background: white;
        border-radius: 16px;
        padding: 25px;
        display: flex;
        align-items: center;
        gap: 20px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .stat-box:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    }
    .stat-box-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }
    .stat-box-icon.blue {
        background: linear-gradient(135deg, #3B82F6, #1D4ED8);
        color: white;
    }
    .stat-box-icon.green {
        background: linear-gradient(135deg, #10B981, #059669);
        color: white;
    }
    .stat-box-icon svg {
        width: 28px;
        height: 28px;
    }
    .stat-box-content {
        flex: 1;
    }
    .stat-box-value {
        font-size: 36px;
        font-weight: 700;
        color: #1a202c;
        line-height: 1;
    }
    .stat-box-label {
        font-size: 14px;
        color: #718096;
        margin-top: 5px;
    }
    
    /* Quick Actions */
    .actions-row {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-bottom: 25px;
    }
    .action-box {
        background: white;
        border-radius: 16px;
        padding: 30px;
        text-align: center;
        text-decoration: none;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
        border-top: 4px solid transparent;
    }
    .action-box:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 30px rgba(0,0,0,0.12);
    }
    .action-box.blue {
        border-top-color: #3B82F6;
    }
    .action-box.blue .action-icon {
        background: rgba(59, 130, 246, 0.1);
        color: #3B82F6;
    }
    .action-box.green {
        border-top-color: #10B981;
    }
    .action-box.green .action-icon {
        background: rgba(16, 185, 129, 0.1);
        color: #10B981;
    }
    .action-box.purple {
        border-top-color: #6366F1;
    }
    .action-box.purple .action-icon {
        background: rgba(99, 102, 241, 0.1);
        color: #6366F1;
    }
    .action-icon {
        width: 70px;
        height: 70px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
    }
    .action-icon svg {
        width: 32px;
        height: 32px;
    }
    .action-title {
        font-size: 18px;
        font-weight: 600;
        color: #1a202c;
        margin-bottom: 8px;
    }
    .action-desc {
        font-size: 14px;
        color: #718096;
        line-height: 1.5;
    }
    
    /* Recent Users Card */
    .recent-card {
        background: white;
        border-radius: 16px;
        padding: 25px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
    }
    .recent-card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }
    .recent-card-title {
        font-size: 18px;
        font-weight: 600;
        color: #1a202c;
    }
    .recent-table {
        width: 100%;
        border-collapse: collapse;
    }
    .recent-table th {
        text-align: left;
        padding: 12px 15px;
        font-size: 13px;
        font-weight: 600;
        color: #718096;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border-bottom: 2px solid #f1f5f9;
    }
    .recent-table td {
        padding: 15px;
        border-bottom: 1px solid #f1f5f9;
        font-size: 14px;
    }
    .recent-table tr:last-child td {
        border-bottom: none;
    }
    .recent-table tr:hover {
        background: #f8fafc;
    }
    .user-name {
        font-weight: 600;
        color: #1a202c;
    }
    .user-email {
        color: #718096;
        font-size: 13px;
    }
    .role-badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
    }
    .role-badge.admin {
        background: #FED7D7;
        color: #9B2C2C;
    }
    .role-badge.coach {
        background: #C6F6D5;
        color: #22543D;
    }
    .role-badge.specialist {
        background: #FEEBC8;
        color: #744210;
    }
    .role-badge.user {
        background: #E2E8F0;
        color: #4A5568;
    }
    
    @media (max-width: 1024px) {
        .actions-row {
            grid-template-columns: repeat(2, 1fr);
        }
    }
    @media (max-width: 768px) {
        .stats-row {
            grid-template-columns: 1fr;
        }
        .actions-row {
            grid-template-columns: 1fr;
        }
    }
</style>
{% endblock %}

