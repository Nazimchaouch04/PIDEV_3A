{% extends 'base_back.html.twig' %}

{% block body %}
<div class="bo-mental-dashboard">
    <div class="page-header">
        <h1 class="page-title">Administration BioSync</h1>
        <p class="page-subtitle">Gestion globale de la plateforme</p>
    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon blue"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/></svg></div>
            <div class="stat-content">
                <div class="stat-value">{{ totalUsers }}</div>
                <div class="stat-label">Utilisateurs actifs</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon green"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg></div>
            <div class="stat-content">
                <div class="stat-value">{{ pendingCertsCount }}</div>
                <div class="stat-label">Demandes certification</div>
            </div>
        </div>
    </div>

    <div class="quick-actions-grid">
        <a href="{{ path('app_admin_users') }}" class="action-card blue">
            <div class="action-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><line x1="19" y1="8" x2="19" y2="14"/><line x1="16" y1="11" x2="22" y2="11"/></svg></div>
            <h3 class="action-title">Gérer les membres</h3>
            <p class="action-desc">Liste complète, suppression et rôles</p>
        </a>

        <a href="{{ path('app_admin_certifications') }}" class="action-card green">
            <div class="action-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/></svg></div>
            <h3 class="action-title">Validations Pro</h3>
            <p class="action-desc">Approuver les certificats de santé</p>
        </a>
    </div>

    <div class="card">
        <h4 class="card-title">Inscriptions récentes</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Rôle</th>
                </tr>
            </thead>
            <tbody>
                {% for user in recentUsers %}
                <tr>
                    <td>{{ user.nomComplet }}</td>
                    <td>{{ user.email }}</td>
                    <td><span class="badge">{{ user.roles|first }}</span></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}