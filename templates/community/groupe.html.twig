{% extends 'base.html.twig' %}

{% block title %}{{ group.nomGroupe }} - BioSync{% endblock %}

{% block body %}
<div class="app-layout">
    {% include 'partials/_sidebar.html.twig' with {'active': 'community'} %}

    <main class="main-content">
        <!-- Banni√®re Dynamique -->
        <div class="card" style="padding: 0; overflow: hidden; margin-bottom: 30px;">
            {% if group.image starts with('http') or group.image starts with('data:image') %}
                <img src="{{ group.image ?: 'https://images.unsplash.com/photo-1506126613408-eca07ce68773?w=1200' }}" 
                     style="width: 100%; height: 300px; object-fit: cover;" alt="{{ group.nomGroupe }}">
            {% else %}
                <!-- Text-based placeholder image -->
                <div style="width: 100%; height: 300px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-size: 24px; font-weight: bold; text-align: center; padding: 20px; line-height: 1.3;">
                    {{ group.image }}
                </div>
            {% endif %}
            
            <div style="padding: 24px; display: flex; justify-content: space-between; align-items: center;">
                <div>
                    <h1 class="page-title">{{ group.nomGroupe }}</h1>
                    <span class="badge badge-mental-health">{{ group.thematique }}</span>
                </div>
                
                <div style="display: flex; gap: 12px;">
                    {% if isMember %}
                        <form action="{{ path('app_community_leave', {id: group.id}) }}" method="post">
                            <input type="hidden" name="_token" value="{{ csrf_token('leave' ~ group.id) }}">
                            <button type="submit" class="btn btn-outline" style="color: #EF4444; border-color: #EF4444;">Quitter</button>
                        </form>
                    {% elseif group.hasPlaceDisponible %}
                        <form action="{{ path('app_community_join', {id: group.id}) }}" method="post">
                            <input type="hidden" name="_token" value="{{ csrf_token('join' ~ group.id) }}">
                            <button type="submit" class="btn btn-primary">Rejoindre (+50 pts)</button>
                        </form>
                    {% else %}
                        <span class="badge badge-secondary">Groupe Complet</span>
                    {% endif %}
                    <a href="{{ path('app_community') }}" class="btn btn-outline">Retour</a>
                </div>
            </div>
        </div>

        <div class="grid-2">
            <!-- Informations -->
            <div>
                <div class="card" style="margin-bottom: 20px;">
                    <h3 style="margin-bottom: 16px; font-weight: 700;">√Ä propos</h3>
                    <p style="color: var(--text-secondary); line-height: 1.6; margin-bottom: 20px;">
                        {{ group.description ?: 'Aucune description fournie.' }}
                    </p>
                    <div class="group-meta">
                        <span class="group-meta-item">üë• Membres : {{ group.nombreMembres }} / {{ group.capaciteMax }}</span>
                    </div>
                </div>

                <!-- WIDGET METEO (Step 2) -->
                {% if weather %}
                <div class="card" style="background: linear-gradient(135deg, #60a5fa, #3b82f6); color: white;">
                    <h3 style="margin-bottom: 10px; font-size: 18px;">üå§Ô∏è M√©t√©o pour vos activit√©s ({{ weather.name }})</h3>
                    <div style="display: flex; align-items: center; gap: 20px;">
                        <img src="https://openweathermap.org/img/wn/{{ weather.weather[0].icon }}@2x.png" alt="icon">
                        <div>
                            <div style="font-size: 32px; font-weight: 800;">{{ weather.main.temp|round }}¬∞C</div>
                            <div style="text-transform: capitalize;">{{ weather.weather[0].description }}</div>
                        </div>
                        <div style="margin-left: auto; text-align: right;">
                            <div>Humidit√©: {{ weather.main.humidity }}%</div>
                            <div>Vent: {{ weather.wind.speed }} km/h</div>
                        </div>
                    </div>
                </div>
                {% else %}
                 <div class="card" style="background: #fee2e2; color: #b91c1c; border: 1px solid #f87171;">
        ‚ö†Ô∏è La m√©t√©o n'est pas disponible pour le moment (V√©rifiez votre cl√© API).
              </div>
                
                {% endif %}
            </div>

            <!-- √âv√©nements -->
            <div class="card">
                <h3 style="margin-bottom: 16px; font-weight: 700;">√âv√©nements √† venir</h3>
                {% for event in group.evenements %}
                    <div class="appointment-card" style="margin-bottom: 12px; padding: 15px; border: 1px solid var(--border-light);">
                        <div class="appointment-left">
                            <div class="avatar-sm avatar-blue">üìÖ</div>
                            <div>
                                <div class="doctor-name" style="font-size: 16px;">{{ event.titreEvent }}</div>
                                <div class="appointment-meta">
                                    <span>üïí {{ event.dateEvent|date('d/m/Y H:i') }}</span>
                                    <span style="color: var(--success-green); font-weight: 700;">+{{ event.pointsParticipation }} pts</span>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p style="color: var(--text-light); text-align: center; padding: 20px;">Aucun √©v√©nement pr√©vu.</p>
                {% endfor %}
            </div>
        </div>
    </main>
</div>
{% endblock %}