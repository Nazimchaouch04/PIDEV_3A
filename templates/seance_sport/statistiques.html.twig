{% block javascripts %}{{ parent() }}
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
<script>
const C = { blue:'rgba(99,102,241,.85)', green:'rgba(16,185,129,.85)', orange:'rgba(245,158,11,.85)', red:'rgba(239,68,68,.85)', purple:'rgba(139,92,246,.85)', teal:'rgba(20,184,166,.85)' };

new Chart(document.getElementById('chartSeancesSemaine'), {
    type:'line', data:{ labels:{{ seancesParSemaineLabels|raw }}, datasets:[{ label:'SÃ©ances', data:{{ seancesParSemaineData|raw }}, borderColor:C.blue, backgroundColor:'rgba(99,102,241,.1)', borderWidth:2.5, fill:true, tension:0.4, pointRadius:5 }] },
    options:{ responsive:true, plugins:{legend:{display:false}}, scales:{y:{beginAtZero:true, ticks:{stepSize:1}}} }
