        <div class="form-group">
            {{ form_label(form.dateConsommation) }}
            <div style="position: relative; display: flex; align-items: center;">
                {{ form_widget(form.dateConsommation, {
                    'attr': {
                        'id': 'dateConsommation',
                        'class': 'form-control',
                        'style': 'padding-right: 2.5rem;'
