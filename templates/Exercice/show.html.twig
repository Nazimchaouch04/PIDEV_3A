<div class="grid grid-cols-3 gap-4 mb-6">
    <div class="stat-card">
        <div class="stat-card-label">Nom</div>
        <div class="stat-card-value">{{ exercice.nomExercice }}</div>
    </div>
    <div class="stat-card">
        <div class="stat-card-label">Intensit√©</div>
        <div class="stat-card-value">
            {% if exercice.intensite.value == 'eleve' %}
                <span style="color:#dc2626;">üî¥ √âlev√©</span>
            {% elseif exercice.intensite.value == 'modere' %}
