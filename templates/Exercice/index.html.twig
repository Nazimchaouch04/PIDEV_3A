<script>
function filterTable() {
    const search    = document.getElementById('searchInput').value.toLowerCase();
    const intensite = document.getElementById('filterIntensite').value.toLowerCase();
    const seance    = document.getElementById('filterSeance').value.toLowerCase();
    document.querySelectorAll('#tableBody tr').forEach(row => {
        const text = row.innerText.toLowerCase();
        row.style.display = (
            text.includes(search) &&
            (intensite === '' || text.includes(intensite)) &&
            (seance === '' || text.includes(seance))
        ) ? '' : 'none';
    });
}
function sortByColumn(col) {
    const tbody = document.querySelector('#tableBody');
    const rows  = Array.from(tbody.querySelectorAll('tr'));
    rows.sort((a, b) => (a.cells[col]?.innerText || '').localeCompare(b.cells[col]?.innerText || ''));
    rows.forEach(r => tbody.appendChild(r));
}
function confirmDelete(formId) {
    if (confirm('Supprimer cet exercice ?')) document.getElementById(formId).submit();
}
async function calculerCalories() {
    const activite = document.getElementById('cal-activite').value;
    const duree    = document.getElementById('cal-duree').value;
    const resultat = document.getElementById('cal-resultat');
    resultat.innerHTML = 'â³ Calcul en cours...';
    const res  = await fetch(`/exercice/calories?activite=${activite}&duree=${duree}`);
    const data = await res.json();
    if (data.total_calories) {
        resultat.innerHTML = `
            <div style="background:#fff7ed; border-radius:8px; padding:10px 14px; border-left:3px solid #f97316; display:inline-block;">
                <strong>ğŸ”¥ Calories brÃ»lÃ©es :</strong>
                <span style="color:#f97316; font-size:1.1rem;">${Math.round(data.total_calories)} kcal</span>
                <br><small style="color:#94a3b8;">ActivitÃ© : ${data.name} | DurÃ©e : ${data.duration_minutes} min</small>
            </div>`;
    } else {
        resultat.innerHTML = '<span style="color:#ef4444;">âŒ ActivitÃ© non trouvÃ©e.</span>';
    }
}
</script>
