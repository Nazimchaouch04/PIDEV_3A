.kpi-card.pink   { border-color:#ec4899; }
.kpi-card.indigo { border-color:#3b82f6; }
.kpi-icon  { font-size:1.4rem; margin-bottom:.4rem; }
.kpi-value { font-size:1.9rem; font-weight:700; color:#1e293b; line-height:1.1; }
.kpi-label { font-size:.75rem; color:#94a3b8; margin-top:.3rem; text-transform:uppercase; letter-spacing:.04em; }

/* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
   SECTION OBJECTIFS
