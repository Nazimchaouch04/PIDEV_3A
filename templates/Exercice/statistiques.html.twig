.objectifs-section {
    background: #fff;
    border-radius: 16px;
    padding: 1.75rem 2rem;
    box-shadow: 0 1px 4px rgba(0,0,0,0.08);
    margin-bottom: 2rem;
}
.objectifs-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
    gap: .75rem;
}
.objectifs-header h2 {
    font-size: 1.2rem;
    font-weight: 700;
    color: #1e293b;
    margin: 0;
}
.objectifs-actions { display:flex; gap:.6rem; flex-wrap:wrap; }

/* Boutons */
.btn-obj {
    display: inline-flex;
    align-items: center;
    gap: .4rem;
    padding: .5rem 1.1rem;
    border-radius: 8px;
    font-size: .88rem;
    font-weight: 600;
    text-decoration: none;
    cursor: pointer;
    border: none;
    transition: filter .15s, transform .1s;
}
.btn-obj:hover { filter:brightness(.92); transform:translateY(-1px); }
.btn-obj-primary { background:#6366f1; color:#fff; }
.btn-obj-success { background:#10b981; color:#fff; }
.btn-obj-outline { background:#f1f5f9; color:#475569; border:1px solid #e2e8f0; }
.btn-obj-danger  { background:#fee2e2; color:#991b1b; }

/* Grid cartes */
.objectifs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(270px,1fr));
    gap: 1rem;
}
.obj-card {
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    padding: 1.25rem;
    transition: box-shadow .15s;
}
.obj-card:hover { box-shadow:0 4px 16px rgba(0,0,0,0.1); }
.obj-card-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: .75rem;
}
.obj-titre { font-weight:700; color:#1e293b; font-size:.95rem; flex:1; }

