.obj-badge { font-size:.72rem; font-weight:700; padding:.25rem .65rem; border-radius:20px; white-space:nowrap; margin-left:.5rem; }
.obj-badge-en-cours   { background:#dbeafe; color:#1d4ed8; }
.obj-badge-atteint    { background:#d1fae5; color:#065f46; }
.obj-badge-echoue     { background:#fee2e2; color:#991b1b; }
.obj-badge-en-attente { background:#f1f5f9; color:#475569; }

