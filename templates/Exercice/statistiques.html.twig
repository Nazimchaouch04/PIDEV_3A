/* â”€â”€ KPI â”€â”€ */
.kpi-grid { display:grid; grid-template-columns:repeat(auto-fit,minmax(150px,1fr)); gap:1rem; margin-bottom:2rem; }
.kpi-card { background:#fff; border-radius:12px; padding:1.25rem 1.5rem; box-shadow:0 1px 4px rgba(0,0,0,0.08); border-left:4px solid transparent; }
.kpi-card.blue   { border-color:#6366f1; }
.kpi-card.green  { border-color:#10b981; }
.kpi-card.orange { border-color:#f59e0b; }
.kpi-card.red    { border-color:#ef4444; }
.kpi-card.purple { border-color:#8b5cf6; }
