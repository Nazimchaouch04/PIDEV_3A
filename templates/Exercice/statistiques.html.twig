.obj-progress-info { display:flex; justify-content:space-between; font-size:.78rem; color:#64748b; margin-bottom:.3rem; }
.obj-progress-bar  { height:8px; background:#f1f5f9; border-radius:99px; overflow:hidden; }
.obj-progress-fill { height:100%; border-radius:99px; transition:width .6s ease; }
.fill-blue   { background:linear-gradient(90deg,#6366f1,#818cf8); }
.fill-green  { background:linear-gradient(90deg,#10b981,#34d399); }
.fill-orange { background:linear-gradient(90deg,#f59e0b,#fbbf24); }
.fill-red    { background:linear-gradient(90deg,#ef4444,#f87171); }

.obj-meta { font-size:.78rem; color:#94a3b8; margin-top:.5rem; }
