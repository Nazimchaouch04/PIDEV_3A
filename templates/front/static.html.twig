    gap: 2rem;
    flex-wrap: wrap;
}

.footer-links ul {
    display: flex;
    gap: 1rem;
    list-style: none;
    margin: 0;
    padding: 0;
}

.footer-links a {
    color: #9ca3af;
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s;
}

.footer-links a:hover {
    color: white;
}

.footer-social {
    display: flex;
    gap: 1rem;
}

.footer-social a {
    color: #9ca3af;
    font-size: 1.25rem;
    transition: color 0.2s;
}

.footer-social a:hover {
    color: white;
}

.footer-bottom {
    text-align: center;
    padding-top: 2rem;
    margin-top: 2rem;
    border-top: 1px solid #374151;
    color: #9ca3af;
    font-size: 0.875rem;
}

@media (max-width: 768px) {
    .footer-horizontal {
        flex-direction: column;
        text-align: center;
    }
    
