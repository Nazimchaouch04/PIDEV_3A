{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize quiz filtering
    initializeQuizFiltering();
    
    // Initialize progress animations
    initializeProgressAnimations();
});

function initializeQuizFiltering() {
    const filterButtons = document.querySelectorAll('[onclick^="filterQuizzes"]');
    const quizCards = document.querySelectorAll('.quiz-card');
    
    filterButtons.forEach(button => {
        button.addEventListener('click', function() {
            const filter = this.getAttribute('onclick').match(/'([^']+)'/)[1];
            
            // Update active state
            filterButtons.forEach(btn => btn.classList.remove('btn-primary'));
            this.classList.add('btn-primary');
            
            // Filter cards
            quizCards.forEach(card => {
                const status = card.getAttribute('data-status');
                if (filter === 'all' || status === filter) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });
    });
}

function initializeProgressAnimations() {
    // Animate progress circles when they come into view
    const progressCircles = document.querySelectorAll('svg circle[stroke-dasharray]');
    
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const circle = entry.target;
                circle.style.transition = 'stroke-dashoffset 1s ease-in-out';
                observer.unobserve(circle);
            }
        });
    });
    
    progressCircles.forEach(circle => observer.observe(circle));
}

function startQuiz(quizType) {
    // Redirect to quiz player with type
    window.location.href = `/mental/quizzes/play?type=${quizType}`;
}

function filterQuizzes(filter) {
    // This function is called by inline onclick handlers
    console.log('Filtering quizzes:', filter);
}
</script>
