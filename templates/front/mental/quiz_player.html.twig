{# BioSync Mental & Quiz Module - Quiz Player
# Front Office - Interactive Quiz Interface
#}

{% extends 'front/base.html.twig' %}

{% block title %}Quiz - {{ quiz.title }} - BioSync{% endblock %}

{% block content %}
<div class="container py-8 max-w-4xl">
    <!-- Quiz Header -->
    <div class="mb-8">
        <div class="flex items-center mb-4">
            <a href="{{ path('app_mental_quiz_list') }}" class="text-blue-600 hover:text-blue-500 mr-3">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h1 class="text-2xl font-bold text-gray-900 font-heading">
                {{ quiz.title }}
            </h1>
        </div>
        
        <!-- Progress Bar -->
        <div class="mb-6">
            <div class="flex justify-between items-center mb-2">
                <span class="text-sm font-medium">Progression</span>
                <span class="text-sm text-gray-600">
                    Question <span id="currentQuestion">1</span> / <span id="totalQuestions">{{ quiz.questions|length }}</span>
                </span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3">
                <div id="progressBar" class="bg-blue-500 h-3 rounded-full transition-all duration-300" style="width: 10%"></div>
            </div>
        </div>
        
        <!-- Quiz Info -->
        <div class="flex items-center gap-6 text-sm text-gray-600">
            <div class="flex items-center">
                <i class="fas fa-clock mr-2"></i>
                <span>{{ quiz.duration }} min</span>
            </div>
            <div class="flex items-center">
                <i class="fas fa-question-circle mr-2"></i>
                <span>{{ quiz.questions|length }} questions</span>
            </div>
            <div class="flex items-center">
                <i class="fas fa-tag mr-2"></i>
                <span>{{ quiz.category }}</span>
            </div>
        </div>
    </div>

    <!-- Quiz Content -->
    <div id="quizContainer">
        <!-- Welcome Screen -->
        <div id="welcomeScreen" class="quiz-screen">
            {% include 'components/_card.html.twig' with {
                'title': 'Bienvenue dans ce quiz',
                'subtitle': 'Prenez quelques instants pour vous préparer'
            } %}
            {% block card_body %}
                <div class="space-y-6">
                    <div class="text-center">
                        <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                            <i class="fas fa-brain text-blue-500 text-3xl"></i>
                        </div>
                        <h3 class="text-xl font-semibold mb-2">{{ quiz.title }}</h3>
                        <p class="text-gray-600">{{ quiz.description }}</p>
                    </div>
                    
                    <div class="bg-blue-50 rounded-lg p-4">
                        <h4 class="font-medium mb-2">Conseils avant de commencer :</h4>
                        <ul class="space-y-2 text-sm text-gray-700">
                            <li class="flex items-start">
                                <i class="fas fa-check-circle text-blue-500 mt-1 mr-2"></i>
                                <span>Trouvez un endroit calme et sans distractions</span>
                            </li>
                            <li class="flex items-start">
                                <i class="fas fa-check-circle text-blue-500 mt-1 mr-2"></i>
                                <span>Soyez honnête dans vos réponses pour des résultats précis</span>
                            </li>
                            <li class="flex items-start">
                                <i class="fas fa-check-circle text-blue-500 mt-1 mr-2"></i>
                                <span>Prévoyez {{ quiz.duration }} minutes pour compléter le quiz</span>
                            </li>
                            <li class="flex items-start">
                                <i class="fas fa-check-circle text-blue-500 mt-1 mr-2"></i>
                                <span>Il n'y a pas de bonnes ou mauvaises réponses</span>
                            </li>
                        </ul>
                    </div>
                    
                    <div class="flex gap-3">
                        {% include 'components/_button.html.twig' with {
                            'text': 'Commencer le quiz',
                            'variant': 'primary',
                            'icon': 'fas fa-play',
                            'onclick': 'startQuiz()',
                            'class': 'w-full'
                        } %}
                    </div>
                </div>
            {% endblock %}
            {% endinclude %}
        </div>

        <!-- Question Screen -->
        <div id="questionScreen" class="quiz-screen hidden">
            {% include 'components/_card.html.twig' with {
                'title': 'Question en cours',
                'variant': 'default'
            } %}
            {% block card_body %}
                <div class="space-y-6">
                    <!-- Question -->
                    <div>
                        <div class="flex items-start justify-between mb-4">
                            <h3 id="questionText" class="text-lg font-medium flex-1">
                                <!-- Question will be loaded here -->
                            </h3>
                            <span id="questionNumber" class="badge badge-info ml-4">
                                <!-- Question number will be loaded here -->
                            </span>
                        </div>
                        
                        <!-- Question Type Indicator -->
                        <div id="questionType" class="text-sm text-gray-600 mb-4">
                            <!-- Question type will be loaded here -->
                        </div>
                        
                        <!-- Answer Options -->
                        <div id="answerOptions" class="space-y-3">
                            <!-- Answer options will be loaded here -->
                        </div>
                    </div>
                    
                    <!-- Navigation -->
                    <div class="flex justify-between items-center pt-4 border-t border-gray-200">
                        <button id="prevButton" onclick="previousQuestion()" 
                                class="btn btn-soft" disabled>
                            <i class="fas fa-arrow-left mr-2"></i>
                            Précédent
                        </button>
                        
                        <div class="flex gap-2">
                            <!-- Question indicators -->
                            <div id="questionIndicators" class="flex gap-1">
                                <!-- Indicators will be loaded here -->
                            </div>
                        </div>
                        
                        <button id="nextButton" onclick="nextQuestion()" 
                                class="btn btn-primary" disabled>
                            Suivant
                            <i class="fas fa-arrow-right ml-2"></i>
                        </button>
                    </div>
                </div>
            {% endblock %}
            {% endinclude %}
        </div>

        <!-- Results Screen -->
        <div id="resultsScreen" class="quiz-screen hidden">
            {% include 'components/_card.html.twig' with {
                'title': 'Résultats du Quiz',
                'subtitle': 'Voici votre évaluation'
            } %}
            {% block card_body %}
                <div class="space-y-6">
                    <!-- Score Display -->
                    <div class="text-center">
                        <div class="relative inline-flex items-center justify-center">
                            <svg class="w-32 h-32 transform -rotate-90">
                                <circle cx="64" cy="64" r="56" stroke="#E6F4FA" stroke-width="12" fill="none"></circle>
                                <circle id="scoreCircle" cx="64" cy="64" r="56" stroke="#6EC5A6" stroke-width="12" fill="none"
                                        stroke-dasharray="351.86" stroke-dashoffset="0" stroke-linecap="round"></circle>
                            </svg>
                            <div class="absolute">
                                <div id="finalScore" class="text-3xl font-bold text-green-600">0</div>
                                <div class="text-sm text-gray-500">/10</div>
                            </div>
                        </div>
                        
                        <div class="mt-4">
                            <h3 id="resultTitle" class="text-xl font-semibold mb-2">Excellent!</h3>
                            <p id="resultDescription" class="text-gray-600">
                                <!-- Result description will be loaded here -->
                            </p>
                        </div>
                    </div>
                    
                    <!-- Detailed Results -->
                    <div class="bg-gray-50 rounded-lg p-4">
                        <h4 class="font-medium mb-3">Analyse détaillée</h4>
                        <div id="detailedResults" class="space-y-3">
                            <!-- Detailed results will be loaded here -->
                        </div>
                    </div>
                    
                    <!-- Recommendations -->
                    <div class="bg-blue-50 rounded-lg p-4">
                        <h4 class="font-medium mb-3">Recommandations personnalisées</h4>
                        <div id="recommendations" class="space-y-2">
                            <!-- Recommendations will be loaded here -->
                        </div>
                    </div>
                    
                    <!-- Actions -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                        {% include 'components/_button.html.twig' with {
                            'text': 'Voir le rapport complet',
                            'variant': 'primary',
                            'icon': 'fas fa-file-alt'
                        } %}
                        
                        {% include 'components/_button.html.twig' with {
                            'text': 'Partager les résultats',
                            'variant': 'outline',
                            'icon': 'fas fa-share'
                        } %}
                        
                        {% include 'components/_button.html.twig' with {
                            'text': 'Refaire le quiz',
                            'variant': 'soft',
                            'icon': 'fas fa-redo'
                        } %}
                        
                        {% include 'components/_button.html.twig' with {
                            'text': 'Retour aux quiz',
                            'variant': 'soft',
                            'href': path('app_mental_quiz_list')
                        } %}
                    </div>
                </div>
            {% endblock %}
            {% endinclude %}
        </div>
    </div>

    <!-- Timer (optional) -->
    <div id="timer" class="fixed top-4 right-4 bg-white rounded-lg shadow-lg p-3 hidden">
        <div class="flex items-center">
            <i class="fas fa-clock text-blue-500 mr-2"></i>
            <span id="timerDisplay" class="font-medium">00:00</span>
        </div>
    </div>
</div>

<!-- Confirmation Modal -->
{% include 'components/_modal.html.twig' with {
    'id': 'confirmModal',
    'title': 'Confirmation',
    'size': 'md'
} %}
{% block modal_content %}
    <div class="space-y-4">
        <p id="confirmMessage" class="text-gray-700">
            Êtes-vous sûr de vouloir quitter ce quiz ? Votre progression sera perdue.
        </p>
        <div class="flex gap-3 justify-end">
            {% include 'components/_button.html.twig' with {
                'text': 'Annuler',
                'variant': 'outline',
                'onclick': 'closeModal_confirmModal()'
            } %}
            {% include 'components/_button.html.twig' with {
                'text': 'Quitter',
                'variant': 'primary',
                'onclick': 'confirmExit()'
            } %}
        </div>
    </div>
{% endblock %}
{% endmodal_content %}
{% endinclude %}
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
// Quiz data (mock data for demo)
const quizData = {
    title: "Évaluation du Stress",
    description: "Évaluez votre niveau de stress actuel et identifiez les sources de tension.",
    duration: 10,
    category: "Santé mentale",
    questions: [
        {
            id: 1,
            text: "Au cours du mois dernier, à quelle fréquence vous êtes-vous senti(e) dépassé(e) par les événements ?",
            type: "scale",
            scale: {
                min: 0,
                max: 4,
                labels: ["Jamais", "Rarement", "Parfois", "Souvent", "Très souvent"]
            }
        },
        {
            id: 2,
            text: "Comment évaluez-vous votre capacité à gérer les problèmes personnels importants ?",
            type: "scale",
            scale: {
                min: 0,
                max: 4,
                labels: ["Très bien", "Assez bien", "Modérément", "Peu bien", "Pas du tout"]
            }
        },
        {
            id: 3,
            text: "Quels sont les principaux facteurs de stress dans votre vie actuellement ?",
            type: "multiple",
            options: [
                "Travail / Études",
                "Finances",
                "Relations familiales",
                "Santé",
                "Temps libre insuffisant",
                "Autre"
            ]
        },
        {
            id: 4,
            text: "Comment votre sommeil est-il affecté lorsque vous êtes stressé(e) ?",
            type: "single",
            options: [
                "Je dors très mal",
                "J'ai des difficultés à m'endormir",
                "Je me réveille fréquemment",
                "Mon sommeil n'est pas vraiment affecté",
                "Je dors mieux qu'habituellement"
            ]
        },
        {
            id: 5,
            text: "Utilisez-vous des techniques pour gérer votre stress ?",
            type: "single",
            options: [
                "Oui, régulièrement",
                "Oui, occasionnellement",
                "Rarement",
                "Jamais",
                "Je ne connais pas de techniques"
            ]
        }
    ]
};

// Quiz state
let currentQuestionIndex = 0;
let answers = {};
let startTime = null;
let timerInterval = null;

document.addEventListener('DOMContentLoaded', function() {
    // Initialize quiz
    initializeQuiz();
    
    // Prevent accidental navigation
    window.addEventListener('beforeunload', function(e) {
        if (currentQuestionIndex > 0 && currentQuestionIndex < quizData.questions.length) {
            e.preventDefault();
            e.returnValue = 'Votre progression sera perdue. Êtes-vous sûr de vouloir quitter ?';
        }
    });
});

function initializeQuiz() {
    // Set total questions
    document.getElementById('totalQuestions').textContent = quizData.questions.length;
    
    // Initialize question indicators
    updateQuestionIndicators();
}

function startQuiz() {
    // Hide welcome screen
    document.getElementById('welcomeScreen').classList.add('hidden');
    document.getElementById('questionScreen').classList.remove('hidden');
    
    // Start timer
    startTime = Date.now();
    startTimer();
    
    // Load first question
    loadQuestion(0);
}

function startTimer() {
    document.getElementById('timer').classList.remove('hidden');
    timerInterval = setInterval(updateTimer, 1000);
}

function updateTimer() {
    const elapsed = Math.floor((Date.now() - startTime) / 1000);
    const minutes = Math.floor(elapsed / 60);
    const seconds = elapsed % 60;
    document.getElementById('timerDisplay').textContent = 
        `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
}

function loadQuestion(index) {
    const question = quizData.questions[index];
    currentQuestionIndex = index;
    
    // Update question number and progress
    document.getElementById('currentQuestion').textContent = index + 1;
    updateProgressBar();
    
    // Update question content
    document.getElementById('questionText').textContent = question.text;
    document.getElementById('questionNumber').textContent = `Question ${index + 1}`;
    
    // Update question type
    const typeLabels = {
        'scale': 'Échelle de 0 à 4',
        'single': 'Choix unique',
        'multiple': 'Choix multiples'
    };
    document.getElementById('questionType').textContent = `Type: ${typeLabels[question.type]}`;
    
    // Load answer options
    loadAnswerOptions(question);
    
    // Update navigation buttons
    updateNavigationButtons();
    
    // Update question indicators
    updateQuestionIndicators();
}

function loadAnswerOptions(question) {
    const container = document.getElementById('answerOptions');
    container.innerHTML = '';
    
    if (question.type === 'scale') {
        // Scale questions
        const scaleContainer = document.createElement('div');
        scaleContainer.className = 'space-y-3';
        
        question.scale.labels.forEach((label, index) => {
            const option = document.createElement('label');
            option.className = 'flex items-center p-3 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50';
            option.innerHTML = `
                <input type="radio" name="answer" value="${index}" class="mr-3" 
                       ${answers[currentQuestionIndex] == index ? 'checked' : ''}>
                <div class="flex-1">
                    <span class="font-medium">${index} - ${label}</span>
                </div>
            `;
            option.addEventListener('change', function() {
                answers[currentQuestionIndex] = index;
                updateNextButton();
            });
            scaleContainer.appendChild(option);
        });
        
        container.appendChild(scaleContainer);
        
    } else if (question.type === 'single') {
        // Single choice questions
        question.options.forEach((option, index) => {
            const optionElement = document.createElement('label');
            optionElement.className = 'flex items-center p-3 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50';
            optionElement.innerHTML = `
                <input type="radio" name="answer" value="${index}" class="mr-3"
                       ${answers[currentQuestionIndex] == index ? 'checked' : ''}>
                <span>${option}</span>
            `;
            optionElement.addEventListener('change', function() {
                answers[currentQuestionIndex] = index;
                updateNextButton();
            });
            container.appendChild(optionElement);
        });
        
    } else if (question.type === 'multiple') {
        // Multiple choice questions
        question.options.forEach((option, index) => {
            const optionElement = document.createElement('label');
            optionElement.className = 'flex items-center p-3 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50';
            optionElement.innerHTML = `
                <input type="checkbox" name="answer_${index}" value="${index}" class="mr-3"
                       ${answers[currentQuestionIndex] && answers[currentQuestionIndex].includes(index) ? 'checked' : ''}>
                <span>${option}</span>
            `;
            optionElement.addEventListener('change', function() {
                if (!answers[currentQuestionIndex]) {
                    answers[currentQuestionIndex] = [];
                }
                
                if (this.checked) {
                    answers[currentQuestionIndex].push(index);
                } else {
                    answers[currentQuestionIndex] = answers[currentQuestionIndex].filter(i => i !== index);
                }
                
                updateNextButton();
            });
            container.appendChild(optionElement);
        });
    }
}

function updateProgressBar() {
    const progress = ((currentQuestionIndex + 1) / quizData.questions.length) * 100;
    document.getElementById('progressBar').style.width = progress + '%';
}

function updateNavigationButtons() {
    const prevButton = document.getElementById('prevButton');
    const nextButton = document.getElementById('nextButton');
    
    // Previous button
    prevButton.disabled = currentQuestionIndex === 0;
    
    // Next button
    if (currentQuestionIndex === quizData.questions.length - 1) {
        nextButton.innerHTML = 'Terminer<i class="fas fa-check ml-2"></i>';
        nextButton.onclick = finishQuiz;
    } else {
        nextButton.innerHTML = 'Suivant<i class="fas fa-arrow-right ml-2"></i>';
        nextButton.onclick = nextQuestion;
    }
    
    updateNextButton();
}

function updateNextButton() {
    const nextButton = document.getElementById('nextButton');
    const hasAnswer = answers[currentQuestionIndex] !== undefined && 
                     answers[currentQuestionIndex] !== null && 
                     (Array.isArray(answers[currentQuestionIndex]) ? answers[currentQuestionIndex].length > 0 : true);
    
    nextButton.disabled = !hasAnswer;
}

function updateQuestionIndicators() {
    const container = document.getElementById('questionIndicators');
    container.innerHTML = '';
    
    quizData.questions.forEach((question, index) => {
        const indicator = document.createElement('div');
        indicator.className = 'w-2 h-2 rounded-full cursor-pointer';
        
        if (index === currentQuestionIndex) {
            indicator.className += ' bg-blue-500';
        } else if (answers[index] !== undefined) {
            indicator.className += ' bg-green-500';
        } else {
            indicator.className += ' bg-gray-300';
        }
        
        indicator.onclick = () => goToQuestion(index);
        container.appendChild(indicator);
    });
}

function goToQuestion(index) {
    if (index >= 0 && index < quizData.questions.length) {
        loadQuestion(index);
    }
}

function previousQuestion() {
    if (currentQuestionIndex > 0) {
        loadQuestion(currentQuestionIndex - 1);
    }
}

function nextQuestion() {
    if (currentQuestionIndex < quizData.questions.length - 1) {
        loadQuestion(currentQuestionIndex + 1);
    }
}

function finishQuiz() {
    // Stop timer
    clearInterval(timerInterval);
    document.getElementById('timer').classList.add('hidden');
    
    // Calculate results
    const results = calculateResults();
    
    // Show results
    showResults(results);
}

function calculateResults() {
    // Simple scoring algorithm for stress assessment
    let totalScore = 0;
    let answeredQuestions = 0;
    
    Object.keys(answers).forEach(questionIndex => {
        const question = quizData.questions[questionIndex];
        const answer = answers[questionIndex];
        
        if (question.type === 'scale') {
            totalScore += parseInt(answer);
            answeredQuestions++;
        } else if (question.type === 'single') {
            // Convert single choice to score
            totalScore += Math.abs(2 - parseInt(answer)); // Invert for stress (lower is better)
            answeredQuestions++;
        } else if (question.type === 'multiple') {
            // Multiple choice scoring
            totalScore += answer.length * 0.5;
            answeredQuestions++;
        }
    });
    
    // Normalize to 0-10 scale
    const normalizedScore = Math.max(0, Math.min(10, (totalScore / answeredQuestions) * 2));
    
    return {
        score: Math.round(normalizedScore * 10) / 10,
        level: getStressLevel(normalizedScore),
        recommendations: getRecommendations(normalizedScore)
    };
}

function getStressLevel(score) {
    if (score <= 3) return { title: "Faible", color: "green", description: "Votre niveau de stress est gérable" };
    if (score <= 6) return { title: "Modéré", color: "yellow", description: "Un certain niveau de stress est présent" };
    if (score <= 8) return { title: "Élevé", color: "orange", description: "Votre niveau de stress nécessite de l'attention" };
    return { title: "Très élevé", color: "red", description: "Une intervention est recommandée" };
}

function getRecommendations(score) {
    const recommendations = [];
    
    if (score > 6) {
        recommendations.push("Pratiquez des techniques de relaxation quotidiennes");
        recommendations.push("Considérez la méditation ou le yoga");
    }
    
    if (score > 4) {
        recommendations.push("Assurez-vous de dormir suffisamment");
        recommendations.push("Faites de l'exercice régulièrement");
    }
    
    recommendations.push("Parlez à quelqu'un de confiance de vos préoccupations");
    recommendations.push("Prenez des pauses régulières pendant la journée");
    
    return recommendations;
}

function showResults(results) {
    // Hide question screen, show results
    document.getElementById('questionScreen').classList.add('hidden');
    document.getElementById('resultsScreen').classList.remove('hidden');
    
    // Animate score circle
    setTimeout(() => {
        const scorePercent = (results.score / 10) * 100;
        const dashOffset = 351.86 - (351.86 * scorePercent / 100);
        document.getElementById('scoreCircle').style.strokeDashoffset = dashOffset;
        
        // Animate score number
        animateNumber(0, results.score, 1000, (value) => {
            document.getElementById('finalScore').textContent = value.toFixed(1);
        });
    }, 500);
    
    // Update result text
    document.getElementById('resultTitle').textContent = results.level.title;
    document.getElementById('resultDescription').textContent = results.level.description;
    
    // Update detailed results
    const detailedResults = document.getElementById('detailedResults');
    detailedResults.innerHTML = `
        <div class="flex justify-between items-center">
            <span>Score de stress</span>
            <span class="font-medium">${results.score}/10</span>
        </div>
        <div class="flex justify-between items-center">
            <span>Niveau</span>
            <span class="badge badge-${results.level.color}">${results.level.title}</span>
        </div>
        <div class="flex justify-between items-center">
            <span>Questions répondues</span>
            <span class="font-medium">${Object.keys(answers).length}/${quizData.questions.length}</span>
        </div>
        <div class="flex justify-between items-center">
            <span>Temps passé</span>
            <span class="font-medium">${document.getElementById('timerDisplay').textContent}</span>
        </div>
    `;
    
    // Update recommendations
    const recommendationsDiv = document.getElementById('recommendations');
    recommendationsDiv.innerHTML = results.recommendations.map(rec => `
        <div class="flex items-start">
            <i class="fas fa-lightbulb text-blue-500 mt-1 mr-2"></i>
            <span class="text-sm">${rec}</span>
        </div>
    `).join('');
}

function animateNumber(start, end, duration, callback) {
    const startTime = Date.now();
    
    function update() {
        const currentTime = Date.now();
        const elapsed = currentTime - startTime;
        const progress = Math.min(elapsed / duration, 1);
        
        const currentValue = start + (end - start) * progress;
        callback(currentValue);
        
        if (progress < 1) {
            requestAnimationFrame(update);
        }
    }
    
    update();
}

function confirmExit() {
    window.location.href = "{{ path('app_mental_quiz_list') }}";
}
</script>
{% endblock %}
