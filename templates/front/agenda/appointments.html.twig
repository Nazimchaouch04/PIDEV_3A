{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize calendar interactions
    initializeCalendar();
    
    // Initialize appointment actions
    initializeAppointmentActions();
    
    // Initialize booking modal
    initializeBookingModal();
});

function initializeCalendar() {
    // Calendar navigation
    window.previousMonth = function() {
        console.log('Previous month');
        // This would load previous month data
    };
    
    window.nextMonth = function() {
        console.log('Next month');
        // This would load next month data
    };
    
    // Day click handlers
    document.querySelectorAll('.calendar-view .cursor-pointer').forEach(day => {
        day.addEventListener('click', function() {
            const dayNumber = this.querySelector('.font-medium').textContent;
            console.log('Clicked day:', dayNumber);
            // This would show appointments for that day
        });
    });
}

function initializeAppointmentActions() {
    // Appointment menu actions
    document.querySelectorAll('.fa-ellipsis-v').forEach(button => {
        button.addEventListener('click', function(e) {
            e.stopPropagation();
            showAppointmentContextMenu(this);
        });
    });
    
    // Join video call
    document.querySelectorAll('.btn-primary').forEach(button => {
        if (button.textContent.includes('Rejoindre')) {
            button.addEventListener('click', function() {
                showAlert('Redirection vers la visioconférence...', 'info');
                setTimeout(() => {
                    window.open('https://zoom.us/join', '_blank');
                }, 1000);
            });
        }
    });
}

function showAppointmentContextMenu(button) {
    const menu = document.createElement('div');
    menu.className = 'absolute bg-white border border-gray-200 rounded-lg shadow-lg py-2 z-50';
    menu.innerHTML = `
        <button class="block w-full text-left px-4 py-2 text-sm hover:bg-gray-100">
            <i class="fas fa-edit mr-2"></i> Modifier
        </button>
        <button class="block w-full text-left px-4 py-2 text-sm hover:bg-gray-100">
            <i class="fas fa-calendar-alt mr-2"></i> Reporter
        </button>
        <button class="block w-full text-left px-4 py-2 text-sm hover:bg-gray-100">
            <i class="fas fa-bell mr-2"></i> Rappel
        </button>
        <button class="block w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50">
            <i class="fas fa-times mr-2"></i> Annuler
        </button>
    `;
    
    const rect = button.getBoundingClientRect();
    menu.style.top = rect.bottom + 'px';
    menu.style.left = rect.left + 'px';
    
    document.body.appendChild(menu);
    
    setTimeout(() => {
        document.addEventListener('click', function closeMenu() {
            menu.remove();
            document.removeEventListener('click', closeMenu);
        });
    }, 100);
}

function initializeBookingModal() {
    // Step navigation
    const steps = ['step1', 'step2', 'step3', 'step4', 'step5'];
    let currentStep = 0;
    
    // Auto-advance steps when selections are made
    document.querySelectorAll('input[name="professional"]').forEach(input => {
        input.addEventListener('change', function() {
            if (this.checked) {
                setTimeout(() => showStep(1), 300);
            }
        });
    });
    
    document.querySelectorAll('input[name="date"]').forEach(input => {
        input.addEventListener('change', function() {
            if (this.checked) {
                setTimeout(() => showStep(2), 300);
            }
        });
    });
    
    document.querySelectorAll('input[name="time"]').forEach(input => {
        input.addEventListener('change', function() {
            if (this.checked) {
                setTimeout(() => showStep(3), 300);
            }
        });
    });
    
    document.querySelectorAll('input[name="type"]').forEach(input => {
        input.addEventListener('change', function() {
            if (this.checked) {
                setTimeout(() => showStep(4), 300);
            }
        });
    });
    
    function showStep(stepIndex) {
        steps.forEach((step, index) => {
            const element = document.getElementById(step);
            if (index <= stepIndex) {
                element.style.display = 'block';
            } else {
                element.style.display = 'none';
            }
        });
        currentStep = stepIndex;
    }
}

function confirmBooking() {
    // Collect form data
    const professional = document.querySelector('input[name="professional"]:checked')?.value;
    const date = document.querySelector('input[name="date"]:checked')?.value;
    const time = document.querySelector('input[name="time"]:checked')?.value;
    const type = document.querySelector('input[name="type"]:checked')?.value;
    
    if (!professional || !date || !time || !type) {
        showAlert('Veuillez remplir toutes les étapes', 'error');
        return;
    }
    
    // Simulate booking
    showAlert('Recherche des créneaux disponibles...', 'info');
    
    setTimeout(() => {
        showAlert('Rendez-vous confirmé !', 'success');
        closeModal_bookingModal();
        
        // This would refresh the appointments list
        setTimeout(() => {
            location.reload();
        }, 2000);
    }, 1500);
}

// Reminder notifications
function checkUpcomingAppointments() {
    const now = new Date();
    const upcomingAppointments = [
        {
            time: '14:30',
            date: now.toDateString(),
            title: 'Dr. Marie Laurent - Nutritionniste'
        }
    ];
    
    upcomingAppointments.forEach(appointment => {
        const appointmentTime = new Date(`${appointment.date} ${appointment.time}`);
        const timeDiff = appointmentTime - now;
        
        // Show reminder 15 minutes before
        if (timeDiff > 0 && timeDiff <= 15 * 60 * 1000) {
            showAlert(`Rappel: RDV avec ${appointment.title} dans 15 minutes!`, 'info');
        }
    });
}

// Check for reminders every minute
setInterval(checkUpcomingAppointments, 60000);
</script>
