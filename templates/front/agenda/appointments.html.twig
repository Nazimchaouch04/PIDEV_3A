{% block modal_content %}
    <div class="space-y-6">
        <!-- Step 1: Choose Professional -->
        <div id="step1">
            <h4 class="font-semibold mb-3">1. Choisissez un professionnel</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                <label class="border border-gray-200 rounded-lg p-3 cursor-pointer hover:bg-gray-50">
                    <input type="radio" name="professional" value="nutritionist" class="mr-3">
                    <div>
                        <div class="font-medium">Nutritionniste</div>
                        <div class="text-sm text-gray-600">Dr. Marie Laurent</div>
                    </div>
                </label>
                
                <label class="border border-gray-200 rounded-lg p-3 cursor-pointer hover:bg-gray-50">
                    <input type="radio" name="professional" value="coach" class="mr-3">
                    <div>
                        <div class="font-medium">Coach sportif</div>
                        <div class="text-sm text-gray-600">Thomas Bernard</div>
                    </div>
                </label>
                
                <label class="border border-gray-200 rounded-lg p-3 cursor-pointer hover:bg-gray-50">
                    <input type="radio" name="professional" value="psychologist" class="mr-3">
                    <div>
                        <div class="font-medium">Psychologue</div>
                        <div class="text-sm text-gray-600">Dr. Sophie Martin</div>
                    </div>
                </label>
                
                <label class="border border-gray-200 rounded-lg p-3 cursor-pointer hover:bg-gray-50">
                    <input type="radio" name="professional" value="osteopath" class="mr-3">
                    <div>
                        <div class="font-medium">Ostéopathe</div>
                        <div class="text-sm text-gray-600">Dr. Pierre Dubois</div>
                    </div>
                </label>
            </div>
        </div>
        
        <!-- Step 2: Choose Date -->
        <div id="step2">
            <h4 class="font-semibold mb-3">2. Choisissez une date</h4>
            <div class="grid grid-cols-7 gap-2">
                <!-- Next 7 days -->
                {% for i in 0..6 %}
                    <label class="border border-gray-200 rounded-lg p-2 text-center cursor-pointer hover:bg-gray-50">
                        <input type="radio" name="date" value="{{ "now"|date_modify("+"~i~" days")|date("Y-m-d") }}" class="sr-only">
                        <div class="text-xs text-gray-500">
                            {{ "now"|date_modify("+"~i~" days")|date("D") }}
                        </div>
                        <div class="font-medium">
                            {{ "now"|date_modify("+"~i~" days")|date("d") }}
                        </div>
                    </label>
                {% endfor %}
            </div>
        </div>
        
        <!-- Step 3: Choose Time -->
        <div id="step3">
            <h4 class="font-semibold mb-3">3. Choisissez un créneau horaire</h4>
            <div class="grid grid-cols-4 gap-2">
                {% for time in ["09:00", "10:00", "11:00", "14:00", "15:00", "16:00", "17:00", "18:00"] %}
                    <label class="border border-gray-200 rounded-lg p-2 text-center cursor-pointer hover:bg-gray-50">
                        <input type="radio" name="time" value="{{ time }}" class="sr-only">
                        <div class="text-sm">{{ time }}</div>
                    </label>
                {% endfor %}
            </div>
        </div>
        
        <!-- Step 4: Consultation Type -->
        <div id="step4">
            <h4 class="font-semibold mb-3">4. Type de consultation</h4>
            <div class="grid grid-cols-2 gap-3">
                <label class="border border-gray-200 rounded-lg p-3 cursor-pointer hover:bg-gray-50">
