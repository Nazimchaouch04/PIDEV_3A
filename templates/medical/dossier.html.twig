{% extends 'base_back.html.twig' %}

{% block title %}Dossier Médical{% endblock %}

{% block body %}

<div class="page-header">
    <h1 class="page-title">Mon Dossier Médical</h1>
    <p class="page-subtitle">Historique des consultations et rendez-vous</p>
</div>

<div class="card shadow-sm p-4">

    <h4 class="mb-4">Consultations</h4>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Médecin</th>
                <th>Motif</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
        {% for consultation in consultations %}
            <tr>
                <td>{{ consultation.dateConsultation|date('d/m/Y') }}</td>
                <td>{{ consultation.rendezVous.specialiste.nomComplet }}</td>
                <td>{{ consultation.rendezVous.motif }}</td>
                <td>
                    <a href="{{ path('app_consultation_show',{id: consultation.id}) }}"
                       class="btn btn-primary btn-sm">
                       Voir
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">Aucune consultation</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>

{% endblock %}
