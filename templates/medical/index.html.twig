{% extends 'base_back.html.twig' %}

{% block title %}Mes rendez-vous{% endblock %}

{% block body %}

<div class="page-header flex-between">
    <div>
        <h1 class="page-title">Medical Appointments</h1>
        <p class="page-subtitle">Manage your healthcare appointments</p>
    </div>

    <a href="{{ path('app_medical_new') }}" class="btn btn-success">
        Prendre un RDV
    </a>
</div>


        {# Tabs Navigation #}
        <div class="tabs">
            <button class="tab-btn active">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                    <line x1="16" y1="2" x2="16" y2="6"/>
                    <line x1="8" y1="2" x2="8" y2="6"/>
                    <line x1="3" y1="10" x2="21" y2="10"/>
                </svg>
                My Appointments
            </button>
            
        </div>

        <div class="grid grid-cols-2 gap-6">
           
            {# Specialistes #}
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Specialistes disponibles</h4>
                </div>
               
        {# Historique #}
        <div class="card mt-6">
            <div class="card-header">
                <h4 class="card-title">Historique des rendez-vous</h4>
            </div>
           
            {% if rendezVous|length > 0 %}
                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Specialiste</th>
                                <th>Date</th>
                                <th>Motif</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for rdv in rendezVous %}
                                <tr>
                                   <td><strong>Dr. {{ rdv.specialiste.nomComplet }}</strong></td>
                                    <td>{{ rdv.dateHeure|date('d/m/Y H:i') }}</td>
                                    <td>{{ rdv.motif|slice(0, 30) }}...</td>
                                    <td>
                                        {% if rdv.statut == 'REALISE' %}
                                            <span class="badge badge-success">R√©alis√©</span>

                                        {% elseif rdv.statut == 'CONFIRME' %}
                                            <span class="badge badge-primary">Confirm√©</span>

                                        {% elseif rdv.statut == 'ANNULE' %}
                                            <span class="badge badge-secondary">Annul√©</span>

                                        {% elseif rdv.statut == 'DEMANDE' %}
                                            <span class="badge badge-warning">Demand√©</span>

                                        {% else %}
                                            <span class="badge badge-light">Inconnu</span>
                                        {% endif %}

                                    </td>
                                    <td>
                                        <div class="table-actions">
                                            <a href="{{ path('app_medical_show', {id: rdv.id}) }}" class="icon-btn" title="Voir">
                                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                                                    <circle cx="12" cy="12" r="3"/>
                                                </svg>
                                            </a>
                                                     {% if rdv.statut == 'DEMANDE' or rdv.statut == 'CONFIRME' %}
                                                     <a href="{{ path('app_medical_edit', {id: rdv.id}) }}" class="icon-btn" title="Modifier">

                                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                                                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                                                    </svg>
                                                </a>
                                            {% endif %}
                                           <form method="post" action="{{ path('app_medical_delete', {id: rdv.id}) }}" style="display:inline;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rdv.id) }}">

                                                    {% if app.request.get('confirm') == rdv.id %}
                                                        <span style="color:red; font-weight:bold; margin-right: 6px;">
                                                            √ätes-vous s√ªr ?
                                                        </span>
                                                        <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                                                        <a href="{{ path('app_medical') }}" class="btn btn-secondary btn-sm">Annuler</a>
                                                    {% else %}
                                                        <a href="{{ path('app_medical', {confirm: rdv.id}) }}"
                                                        class="icon-btn danger"
                                                        title="Supprimer">
                                                            üóë
                                                        </a>
                                                    {% endif %}
                                                </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="empty-state">
                    <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="var(--gray-300)" stroke-width="2">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                        <line x1="16" y1="2" x2="16" y2="6"/>
                        <line x1="8" y1="2" x2="8" y2="6"/>
                        <line x1="3" y1="10" x2="21" y2="10"/>
                    </svg>
                    <h4 class="empty-state-title">Aucun rendez-vous</h4>
                    <p class="text-gray">Planifiez votre premier rendez-vous medical.</p>
                </div>
            {% endif %}
        </div>
    </main>
</div>
{% endblock %}
