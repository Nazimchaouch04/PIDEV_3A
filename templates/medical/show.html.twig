{% extends 'base_back.html.twig' %}

{% block title %}RDV - Dr. {{ rdv.specialiste.nomComplet }} - BioSync{% endblock %}

{% block body %}
<div class="app-layout">
    {% include 'partials/_sidebar.html.twig' with {'active': 'medical'} %}

    <main class="main-content">
        <div class="page-header flex-between">
            <div>
                <h1 class="page-title">Rendez-vous</h1>
                <p class="page-subtitle">
                    Dr. {{ rdv.specialiste.nomComplet }} —
                    {{ rdv.dateHeure|date('d/m/Y H:i') }}
                </p>
            </div>
            <div style="display: flex; gap: 0.5rem;">
                <a href="{{ path('app_medical') }}" class="btn btn-primary">Retour</a>
            </div>
        </div>

        <div class="grid grid-cols-2 gap-6">
            <!-- RDV DETAILS -->
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Détails du rendez-vous</h4>
                </div>

                <div class="list-item">
                    <div class="list-item-content">
                        <div class="list-item-subtitle">Date et heure</div>
                        <div class="list-item-title">
                            {{ rdv.dateHeure|date('d/m/Y H:i') }}
                        </div>
                    </div>
                </div>

                <div class="list-item">
                    <div class="list-item-content">
                        <div class="list-item-subtitle">Statut</div>
                        <div class="list-item-title">
                            {% if rdv.statut == 'REALISE' %}
                                <span class="badge badge-success">Réalisé</span>
                            {% elseif rdv.statut == 'ANNULE' %}
                                <span class="badge badge-danger">Annulé</span>
                            {% elseif rdv.statut == 'CONFIRME' %}
                                <span class="badge badge-primary">Confirmé</span>
                            {% else %}
                                <span class="badge badge-warning">Demandé</span>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="list-item">
                    <div class="list-item-content">
                        <div class="list-item-subtitle">Motif</div>
                        <div class="list-item-title">{{ rdv.motif }}</div>
                    </div>
                </div>

                {% if rdv.statut == 'CONFIRME' %}
                    <form action="{{ path('app_medical_realise', {id: rdv.id}) }}" method="post" class="mt-4">
                        <button type="submit" class="btn btn-success w-full">
                            Marquer comme réalisé
                        </button>
                    </form>
                {% endif %}
            </div>

            <!-- DOCTOR -->
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Spécialiste</h4>
                </div>

                <div class="list-item">
                    <div class="list-item-content">
                        <div class="list-item-title">
                            Dr. {{ rdv.specialiste.nomComplet }}
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}
