        <a href="{{ path('app_medical') }}" class="menu-item {{ active|default('') == 'medical' ? 'active' : '' }}">
            <span class="menu-item-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
