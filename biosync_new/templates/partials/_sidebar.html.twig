        <a href="{{ path('app_sports') }}" class="menu-item {{ active|default('') == 'sports' ? 'active' : '' }}">
            <span class="menu-item-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
